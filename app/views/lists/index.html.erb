<div class="col-12 mx-auto">
<img style="background-position:cover;" src="https://nextbestpicture-com.b-cdn.net/wp-content/uploads/2023/05/Midnight-In-Paris.jpg" width="100%" height="400px"alt="">
</div>
<div class="mt-3 col-8 mx-auto">
<div class="navbar d-flex justify-content-between">
  <h1>All lists</h1>
  <%= link_to new_list_path do%>
    <button class="btn btn-primary">Create a list</button>
  <% end %>
  </div>


  <% @lists.each do |list| %>
  <div class="card mt-2">
    <div class="p-3 d-flex justify-content-between">
    <div>
     <h2><%= list.name.capitalize %></h2>
     <p>- <%= list.details.capitalize %></p>
     <% list.bookmarks.each do |bookmark| %>
      <img class="rounded-circle" height="50px" width="50px" src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title%>">
      <% end %>
      <div class="mt-3">
     <%= link_to list_path(list.id) do %>
      <button class="btn btn-success rounded text-white">View</button>
    <% end %>
    </div>
     </div>

      <%= link_to list_path(list),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%>
        <i class="text-danger fa-solid fa-x fa-xl"></i>
      <% end %>

    </div>
</div>
    <% end %>


</div>
